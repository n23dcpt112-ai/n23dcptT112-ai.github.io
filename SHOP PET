<!-- Popup -->
<div id="popup">
  <div class="popup-content">
    <span class="close">&times;</span>
    <h2>Giới thiệu Pet Cưng</h2>
    <p>Chúng tôi mang đến những người bạn nhỏ dễ thương, đáng yêu và khỏe mạnh 🐶🐱.</p>
  </div>
</div>

<script>
$(document).ready(function(){
  // Slider tự động
  let index = 0;
  setInterval(function(){
    let imgs = $("#slider img");
    imgs.eq(index).fadeOut(600);
    index = (index + 1) % imgs.length;
    imgs.eq(index).fadeIn(600);
  }, 3000);

  // Popup
  $("#showPopup").click(function(){
    $("#popup").fadeIn();
  });
  $(".close, #popup").click(function(e){
    if(e.target !== this) return; // click ra ngoài mới đóng
    $("#popup").fadeOut();
  });
});
</script>

