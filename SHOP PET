    /* Popup */
    #popup { display:none; position:fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.6);}
    .popup-content { background:white; width:50%; margin:10% auto; padding:20px; border-radius:10px; text-align:center;}
    .close { float:right; cursor:pointer; color:red; font-weight:bold; }</STYLE>
